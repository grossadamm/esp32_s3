{
  "mcpServers": {
    "finance-mcp": {
      "command": "node",
      "args": ["../mcp-servers/finance-mcp/dist/index.js"],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev-tools-mcp": {
      "command": "node",
      "args": ["../mcp-servers/dev-tools-mcp/dist/index.js"],
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "development": {
    "finance-mcp": {
      "command": "tsx",
      "args": ["../mcp-servers/finance-mcp/src/index.ts"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "dev-tools-mcp": {
      "command": "tsx",
      "args": ["../mcp-servers/dev-tools-mcp/src/index.ts"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  }
} 